<?xml version="1.0" encoding="utf-8"?>
<renyaowei.top.slidelayout.widget.ResideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resideLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu"
        android:layout_below="@+id/top_menu"
        android:background="#d45252">

        <LinearLayout
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all"
                style="@style/MenuStyle"
                android:text="@string/all" />

            <TextView
                android:id="@+id/fuli"
                style="@style/MenuStyle"
                android:text="@string/fuli" />

            <TextView
                android:id="@+id/android"
                style="@style/MenuStyle"
                android:text="@string/android" />

            <TextView
                android:id="@+id/ios"
                style="@style/MenuStyle"
                android:text="@string/ios" />

            <TextView
                android:id="@+id/video"
                style="@style/MenuStyle"
                android:text="@string/video" />

            <TextView
                android:id="@+id/front"
                style="@style/MenuStyle"
                android:text="@string/front" />

            <TextView
                android:id="@+id/resource"
                style="@style/MenuStyle"
                android:text="@string/resource" />

            <TextView
                android:id="@+id/app"
                style="@style/MenuStyle"
                android:text="@string/app" />

            <TextView
                android:id="@+id/more"
                style="@style/MenuStyle"
                android:text="@string/more" />

            <!--<TextView-->
            <!--android:id="@+id/about"-->
            <!--style="@style/MenuStyle"-->
            <!--android:text="@string/about"/>-->

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#125bba"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="内容"
            android:textSize="22sp" />

    </LinearLayout>


</renyaowei.top.slidelayout.widget.ResideLayout>
